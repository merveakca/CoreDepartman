@using CoreDepartman.Models
@model List<personel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_TestLayout.cshtml";
}

<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Ad</th>
        <th>Soyad</th>
        <th>Şehir</th>
        <th>Departman</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.perid</td>
            <td>@x.ad</td>
            <td>@x.soyad</td>
            <td>@x.sehir</td>
            <td>@x.depart.</td>
            <td><a href="/depart/DepartmanSil/@x.perid" class="btn btn-danger">Sil</td>
            <td><a href="/depart/DepartmanGetir/@x.perid" class="btn btn-success">Güncelle</td>
        </tr>
    }

</table>
<a href="/depart/YeniDepartman/" class="btn btn-primary">Yeni Personel</a>

